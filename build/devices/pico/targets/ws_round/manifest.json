		"$(MODULES)/drivers/led/manifest.json",
		"$(MODULES)/drivers/button/manifest.json"
	],
	"modules": {
		"setup/target": "./setup-target"
	},
	"preload": "setup/target",
	"config": {
		"screen": "ili9341",
		"touch": "",
		"lcd_rst_pin": 12,
		"lcd_cs_pin": 9
	},
	"defines": {
		"i2c": {
			"sda_pin": 6,
			"scl_pin": 7,
			"port": 1
		},
		"spi": {
			"mosi_pin": 11,
			"sck_pin": 10
		},
		"ili9341": {
			"cs_pin": 9,
			"dc_pin": 8,
			"rst_pin": 12,
			"spi_port": 1,
			"backlight_pin": 25,
			"backlight_on": 1,
			"flipx": true
		}
	}
