{
	"modules": {
		"*": [
			"$(MODULES)/base/time/*",
			"$(MODULES)/base/time/esp/*",
			"$(MODULES)/base/timer/*",
			"$(MODULES)/base/timer/mc/*",
		]
	},
	"preload": [
		"time",
		"timer",
	],
	"recipes": {
		"separate-asm": [
			"commodetto*",
			"cfe*",
			"piu*",
			"Resource*",
			"mod*",
			"timer*",
			"i2c*",
			"digital*",
			"pulsecount*",
			"analog*",
			"btutils*"
		]
	},
	"platforms": {
		"nrf52/*": {
			"include": "$(BUILD)/devices/nrf52/targets/$(SUBPLATFORM)/manifest.json"
		},
	}
}
