#!/bin/bash

name=$1
volumefile=$2

rm "$volumefile" 2> /dev/null

echo "Waiting for $name."
echo -n "Double-tap the reset button to enter programming mode."
set -o pipefail
volume=$( df -P | grep "$name" | awk '{print($6)}' )
while [ -z "$volume"  ]; do
        echo -n "."
        sleep 1
        volume=$( df -P | grep "$name" | awk '{print($6)}' )
done
echo

echo $volume >> "$volumefile"

